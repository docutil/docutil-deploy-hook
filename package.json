{
  "name": "docutil-deploy-hook",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "esbuild --outdir=dist --platform=node --target=node16 --bundle --minify src/index.js"
  },
  "author": "no_name",
  "license": "MIT",
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "endOfLine": "auto"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true,
      "jest": true,
      "mocha": true,
      "node": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ]
  },
  "devDependencies": {
    "esbuild": "^0.14.21",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.4.0"
  },
  "dependencies": {
    "fs-extra": "^10.0.0",
    "js-yaml": "^3.14.1",
    "minimist": "^1.2.5",
    "zx": "^5.0.0"
  }
}
